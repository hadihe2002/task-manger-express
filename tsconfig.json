{
  "compilerOptions": {
    "typeRoots": ["./node_module/@types", "./src/types"],
    "rootDir": "./",
    "target": "es2016",
    "experimentalDecorators": true,

    "module": "commonjs",

    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": false,
    "strictPropertyInitialization": false,
    "skipLibCheck": false
  }
}
